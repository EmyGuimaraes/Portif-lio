from PIL import Image, ImageDraw, ImageFont

# Tamanho da imagem (largura, altura)
largura = 400
altura = 200

# Criando uma imagem RGB com fundo azul
imagem = Image.new("RGB", (largura, altura), color=(0, 102, 204))

# Criando um objeto para desenhar
desenho = ImageDraw.Draw(imagem)

# Texto a ser adicionado
texto = "Olá, PNG!"
cor_texto = (255, 255, 255)  # branco

# Carrega uma fonte padrão
try:
    fonte = ImageFont.truetype("arial.ttf", 30)
except:
    fonte = ImageFont.load_default()

# Posição do texto (centralizado)
largura_texto, altura_texto = desenho.textsize(texto, font=fonte)
posicao = ((largura - largura_texto) // 2, (altura - altura_texto) // 2)

# Escreve o texto na imagem
desenho.text(posicao, texto, fill=cor_texto, font=fonte)

# Salva a imagem como arquivo PNG
imagem.save("imagem_gerada.png")

print("Imagem 'imagem_gerada.png' criada com sucesso!")
